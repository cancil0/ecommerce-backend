<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
	  throwExceptions="false"
	  throwConfigExceptions="false"
      internalLogFile="c:\temp\internal.log"
      internalLogLevel="Error" >

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
		<add assembly="NLog.Database"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file -->
		<target xsi:type="File" name="File" fileName="c:\logs\${shortdate}\log.log"
				layout="${longdate}|${level}|CorrelationId:${scopeproperty:CorrelationId}|${message} ${exception:format=tostring}" />

		<target xsi:type="Console" name="Console"
				layout="${longdate}|${level}|CorrelationId:${scopeproperty:CorrelationId}|${message} ${exception:format=tostring}" />

	</targets>

	<!-- rules to map from logger name to target -->

	<rules>
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="*" levels="Debug, Warn, Error" writeTo="File, Console" />
		<logger name="*" levels="Info, Error" writeTo="Database" />
	</rules>
</nlog>